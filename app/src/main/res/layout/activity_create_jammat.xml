<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/createJammat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FAFC"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <!-- Header Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/headerCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#0D9488"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="20dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#14B8A6">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_add_circle"
                        app:tint="#FFFFFF"/>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:id="@+id/txtTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Create New Jamat"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fill in the details below"
                        android:textSize="13sp"
                        android:textColor="#CCFBF1"
                        android:layout_marginTop="2dp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Form Section Label -->
        <TextView
            android:id="@+id/txtFormLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jamat Information"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#1F2937"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/headerCard"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Jamat Name Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardJamatName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="14dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/txtFormLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_label"
                    app:tint="#6B7280"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    app:boxBackgroundMode="none"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/jammatName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Jamat Name"
                        android:textColor="#111827"
                        android:textColorHint="#9CA3AF"
                        android:textSize="15sp"
                        android:background="@android:color/transparent"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Description Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="14dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/cardJamatName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start"
                android:padding="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/ic_description"
                    app:tint="#6B7280"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    app:boxBackgroundMode="none"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/jammatDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Description"
                        android:minLines="4"
                        android:gravity="start"
                        android:inputType="textMultiLine"
                        android:textColor="#111827"
                        android:textColorHint="#9CA3AF"
                        android:textSize="15sp"
                        android:background="@android:color/transparent"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Location Section -->
        <TextView
            android:id="@+id/txtLocationLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location Details"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#1F2937"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/cardDescription"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Start City Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardStartCity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="14dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/txtLocationLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_location"
                    app:tint="#2563EB"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    app:boxBackgroundMode="none"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/startCity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Start City"
                        android:textColor="#111827"
                        android:textColorHint="#9CA3AF"
                        android:textSize="15sp"
                        android:background="@android:color/transparent"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- End City Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardEndCity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="14dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/cardStartCity"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_flag"
                    app:tint="#DC2626"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    app:boxBackgroundMode="none"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/endCity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="End City"
                        android:textColor="#111827"
                        android:textColorHint="#9CA3AF"
                        android:textSize="15sp"
                        android:background="@android:color/transparent"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Date Section -->
        <TextView
            android:id="@+id/txtDateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Journey Timeline"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#1F2937"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/cardEndCity"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Start Date Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardStartDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="14dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/txtDateLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_start"
                    app:tint="#16A34A"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    app:boxBackgroundMode="none"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/startDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Start Date (DD/MM/YYYY)"
                        android:textColor="#111827"
                        android:textColorHint="#9CA3AF"
                        android:textSize="15sp"
                        android:focusable="false"
                        android:clickable="true"
                        android:background="@android:color/transparent"/>
                </com.google.android.material.textfield.TextInputLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_chevron_right"
                    app:tint="#9CA3AF"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- End Date Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardEndDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="14dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/cardStartDate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_end"
                    app:tint="#F59E0B"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    app:boxBackgroundMode="none"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/endDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="End Date (DD/MM/YYYY)"
                        android:textColor="#111827"
                        android:textColorHint="#9CA3AF"
                        android:textSize="15sp"
                        android:focusable="false"
                        android:clickable="true"
                        android:background="@android:color/transparent"/>
                </com.google.android.material.textfield.TextInputLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_chevron_right"
                    app:tint="#9CA3AF"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Create Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/createJamatBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Create Jamat"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:paddingVertical="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="20dp"
            app:cornerRadius="14dp"
            app:backgroundTint="#0D9488"
            app:icon="@drawable/ic_check"
            app:iconGravity="textStart"
            app:iconTint="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/cardEndDate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>